<style type="text/css">
    .about-cover {
        height: 75vh;
    }
    #sma {
        bottom: 150px;
    }
    .bg-cover::before {
        background-image: url(https://cdn.jsdelivr.net/gh/moezx/cdn@3.1.9/img/Sakura/images/grid.png);
    }
    .card .card-content {
        padding: 24px 24px 24px 24px;
        border-radius: 0 0 2px 2px;
    }
    .mb-4 {
        padding: 20px 24px 0px 24px;
    }
</style>

<%- partial('_partial/bg-cover') %>

<main class="content">
    <div id="aboutme" class="container about-container">
        <div class="card">
            <style>
                .rowss {
                    --bs-gutter-x: 1.5rem;
                    --bs-gutter-y: 0;
                    display: flex;
                    flex: 1 0 100%;
                    flex-wrap: wrap;
                    margin-top: calc(var(--bs-gutter-y) * -1);
                    margin-right: calc(var(--bs-gutter-x)/ -2);
                    margin-left: calc(var(--bs-gutter-x)/ -2);
                }
                @media (min-width: 768px) {
                    .col-md-4 {
                        flex: 0 0 auto;
                        width: 33.33333%!important;
                    }
                }
                .rowss>* {
                    flex-shrink: 0;
                    width: 100%;
                    max-width: 100%;
                    padding-right: calc(var(--bs-gutter-x)/ 2);
                    padding-left: calc(var(--bs-gutter-x)/ 2);
                    margin-top: var(--bs-gutter-y);
                }
                .card-counter.info {
                    background: linear-gradient(to right, #1aaac3, #1aaac3); 
                    color: #FFF;
                }
                .card-counter.primary {
                    background: linear-gradient(to right, #6219ff, #6219ff); 
                    color: #FFF;
                }
                .card-counter.success {
                    background: linear-gradient(to right, #19c15b, #19c15b); 
                    color: #FFF;
                }
            
                .card-counter {
                margin: 5px;
                padding: 20px 10px;
                background-color: #fff;
                height: 6.5rem;
                border-radius: 10px;
                transition: .3s linear all;
                position: relative;
            }
            .card-counter svg {
                width: 5rem;
                height: 5rem;
                opacity: 0.5;
            }
            .col-md-4 .icon {
                /* width: 1rem;
                height: 1rem; */
                fill: currentColor;
                overflow: hidden;
            }
            .card-counter .count-numbers {
                position: absolute;
                right: 35px;
                top: 20px;
                font-size: 32px;
                display: block;
            }
            .col-md-4 span {
                display: inline-flex;
                align-items: center;
            }
            .card-counter .count-name {
                position: absolute;
                right: 35px;
                top: 65px;
                font-style: italic;
                text-transform: capitalize;
                opacity: 0.5;
                display: block;
                font-size: 18px;
            }
            .count-numbers a {
                color: #fff!important;
            }
            </style>
            <div class="rowss mb-4">
                <div class="col-md-4">
                    <div class="card-counter info">
